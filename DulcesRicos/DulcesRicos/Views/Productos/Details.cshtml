@model DulcesRicos.Models.Producto

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalles del Producto</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 30px;
        }

        .img-thumbnail {
            border-radius: 8px;
            border: 1px solid #ddd;
        }

        .product-details {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 20px;
            background-color: #fff;
        }

            .product-details h4 {
                margin-bottom: 15px;
            }

        .btn-back {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">Detalles del Producto</h1>

        <div class="product-details">
            <div class="row">
                <div class="col-md-6">
                    <h4 class="mb-3">Nombre: @Html.DisplayFor(model => model.Nombre)</h4>
                    <h4 class="mb-3">Precio: @Model.Precio.ToString("C")</h4>
                    <h4 class="mb-3">Stock: @Html.DisplayFor(model => model.Stock)</h4>
                    <h4 class="mb-3">Descripción: @Html.DisplayFor(model => model.Descripcion)</h4>
                </div>
                <div class="col-md-6">
                    <img src="@Url.Content("~/images/" + Model.Imagen)" alt="@Model.Nombre" class="img-thumbnail" style="max-width: 100%; max-height: 300px;" />
                </div>
            </div>
        </div>

        <p class="btn-back">
            <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
        </p>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
